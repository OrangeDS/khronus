create keyspace metrik with placement_strategy = 'org.apache.cassandra.locator.SimpleStrategy' and strategy_options = {replication_factor:1};

use metrik;

create column family meta with comparator = UTF8Type;

create column family bucket1MILLISECONDS with comparator = LongType and key_validation_class = UTF8Type and caching = 'NONE';
create column family bucket30SECONDS with comparator = LongType and key_validation_class = UTF8Type and caching = 'NONE';
create column family bucket1MINUTEs with comparator = LongType and key_validation_class = UTF8Type and caching = 'NONE';
create column family bucket5MINUTES with comparator = LongType and key_validation_class = UTF8Type and caching = 'NONE';
create column family bucket10MINUTES with comparator = LongType and key_validation_class = UTF8Type and caching = 'NONE';
create column family bucket30MINUTES with comparator = LongType and key_validation_class = UTF8Type and caching = 'NONE';
create column family bucket1HOURs with comparator = LongType and key_validation_class = UTF8Type and caching = 'NONE';

create column family summary30SECONDS with comparator = LongType and key_validation_class = UTF8Type;
create column family summary1MINUTEs with comparator = LongType and key_validation_class = UTF8Type;
create column family summary5MINUTES with comparator = LongType and key_validation_class = UTF8Type;
create column family summary10MINUTES with comparator = LongType and key_validation_class = UTF8Type;
create column family summary30MINUTES with comparator = LongType and key_validation_class = UTF8Type;
create column family summary1HOURS with comparator = LongType and key_validation_class = UTF8Type;