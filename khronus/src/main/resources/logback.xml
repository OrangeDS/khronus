<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout>
            <Pattern>%d %-5level [${HOSTNAME}] [%thread] %logger{36} - %message%replace(%xException){"\n", "\\n"}%nopex%n</Pattern>
        </layout>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/khronus.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logFile.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
        <maxHistory>2</maxHistory>
        <encoder>
            <pattern>%d %-5level [${HOSTNAME}] [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
    <appender name="UDP" class="com.despegar.khronus.util.log.UpdAppender">
        <encoder>
            <pattern>%d %-5level [${HOSTNAME}] [%thread] %logger{36} -  %msg%n</pattern>
        </encoder>
        <ip>{SOME_UDPSERVER_IP}</ip>
        <port>{SOME_UDPSERVER_PORT}</port>
    </appender>
    -->

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
    </appender>

    <logger name="com.despegar.khronus" level="info"/>

    <root level="info">
        <appender-ref ref="ASYNC"/>
    </root>
</configuration>
